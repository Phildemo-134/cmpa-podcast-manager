# Configuration de production pour Podcast Manager
# Copiez ce fichier vers .env.local et remplissez les valeurs

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name

# Next.js Configuration
NODE_ENV=production
NEXTJS_PORT=3000

# Twitter API (pour la publication automatique)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# Stripe Configuration (PRODUCTION)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_PRICE_ID=price_your_pro_plan_price_id

# Cron Job Configuration
CRON_SECRET_KEY=your_cron_secret_key
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# Anthropic API (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Deepgram API (Transcription)
DEEPGRAM_API_KEY=your_deepgram_api_key

# Monitoring et Analytics
SENTRY_DSN=your_sentry_dsn
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_ga_measurement_id

# Sécurité
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=https://your-app.vercel.app

# Redis (si utilisé)
REDIS_URL=your_redis_url

# Email (Resend ou SendGrid)
RESEND_API_KEY=your_resend_api_key
# ou
SENDGRID_API_KEY=your_sendgrid_api_key
